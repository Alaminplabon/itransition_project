<!-- component -->
<nav
  class="flex items-center justify-between flex-wrap bg-white py-4 lg:px-12 shadow border-solid border-t-2 border-blue-700">
  <div class="flex justify-between lg:w-auto w-full lg:border-b-0 pl-6 pr-2 border-solid border-b-2 border-gray-300 pb-5 lg:pb-0">
    <div class="flex items-center flex-shrink-0 text-gray-800 mr-16">
      <a href="/" class="font-semibold text-xl tracking-tight">New Collection</a>
    </div>
    <div class="block lg:hidden ">
      <button
        id="nav"
        class="flex items-center px-3 py-2 border-2 rounded text-blue-700 border-blue-700 hover:text-blue-700 hover:border-blue-700">
        <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title>
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
        </svg>
      </button>
    </div>
  </div>

  <div class="menu w-full lg:block flex-grow lg:flex lg:items-center lg:w-auto lg:px-3 px-8">
    <div class="text-md font-bold text-blue-700 lg:flex-grow">
      <a href="/"
         class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-blue-700 mr-2">
        Home
      </a>
      <a href="/collections"
         class=" block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-blue-700 mr-2">
        Collections
      </a>

    </div>
    <!-- This is an example component -->
    <div class="relative mx-auto text-gray-600 lg:block hidden">

      <%= form_with url: search_path, method: :get, local: true do %>
        <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "search-input border-2 border-gray-300 bg-white h-10 pl-2 pr-8 rounded-lg text-sm focus:outline-none" %>
        <%= submit_tag "Search", class: "search-button cursor-pointer" %>
      <% end %>

    </div>
    <div class="flex ">
      <% if user_signed_in? %>
        <% if current_user.is_admin? %>
          <a href="/admin_dashboard"
             class="block text-md px-4 py-2 rounded text-blue-700 ml-2 font-bold hover:text-white mt-4 hover:bg-blue-700 lg:mt-0">Admin Dashboard</a>
          <% end %>
        <a href="/profile"
           class="block text-md px-4 py-2 rounded text-blue-700 ml-2 font-bold hover:text-white mt-4 hover:bg-blue-700 lg:mt-0">Profile</a>
        <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "block text-md px-4 py-2 rounded text-blue-700 ml-2 font-bold hover:text-white mt-4 hover:bg-blue-700 lg:mt-0" %>
      <% else %>
        <a href="/users/sign_in"
           class="block text-md px-4 py-2 rounded text-blue-700 ml-2 font-bold hover:text-white mt-4 hover:bg-blue-700 lg:mt-0">Sign
          In</a>

        <a href="/users/sign_up"
           class=" block text-md px-4  ml-2 py-2 rounded text-blue-700 font-bold hover:text-white mt-4 hover:bg-blue-700 lg:mt-0">Sign
          Up</a>

      <% end %>
    </div>
  </div>

</nav>