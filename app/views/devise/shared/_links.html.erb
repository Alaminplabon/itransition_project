<div class="p-4 max-w-md mx-auto bg-white rounded-xl shadow-md space-y-4">
  <%- if controller_name != 'sessions' %>
    <div class="text-center">
      <%= link_to "Log in", new_session_path(resource_name), class: "block text-blue-500 hover:text-blue-700 font-semibold text-lg" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "block text-blue-500 hover:text-blue-700 font-semibold text-lg" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block text-blue-500 hover:text-blue-700 font-semibold text-lg" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-center">
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "block text-blue-500 hover:text-blue-700 font-semibold text-lg" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-center">
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "block text-blue-500 hover:text-blue-700 font-semibold text-lg" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="space-y-2">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <div class="text-center">
          <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full w-full" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
