<div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h1 class="text-3xl font-bold mb-4 text-center">Create Support Ticket</h1>

  <%= form_with model: @ticket, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :summary, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :summary, class: "form-input w-48 px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :priority, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.select :priority, options_for_select(["High", "Average", "Low"]), { prompt: 'Select Priority' }, class: "form-select w-48 px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :collection, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :collection, class: "form-input w-48 px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-500" %>
    </div>

    <div class="text-center">
      <%= form.submit "Create Ticket", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
