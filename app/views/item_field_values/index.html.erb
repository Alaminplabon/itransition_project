<h1>Item Field Values</h1>

<table>
  <thead>
  <tr>
    <th>Item</th>
    <th>Item Field</th>
    <th>Value</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @item_field_values.each do |item_field_value| %>
    <tr>
      <td><%= item_field_value.item.name %></td>
      <td><%= item_field_value.item_field.field_name %></td>
      <td><%= item_field_value.value %></td>
      <td><%= link_to 'Show', item_field_value %></td>
      <td><%= link_to 'Edit', edit_item_field_value_path(item_field_value) %></td>
      <td><%= link_to 'Destroy', item_field_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Item Field Value', new_item_field_value_path %>
